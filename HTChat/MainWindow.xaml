<m:MetroWindow x:Class="HTChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:m="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:HTChat"
        xmlns:v="clr-namespace:HTChat.Views"
        xmlns:vm="clr-namespace:HTChat.ViewModels"
        mc:Ignorable="d"
        Title="HTChat" Height="768" Width="1366" WindowState="Maximized"
        DataContext="{Binding Source={StaticResource Locator}}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <v:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MainViewModel}">
            <v:MainView/>
        </DataTemplate>
    </Window.Resources>
    <m:ContentControlEx Content="{Binding CurrentMainViewModel}"/>
</m:MetroWindow>
